@model biblioteca.Models.publicar_libroModel

@{
    ViewBag.Title = "Publicar Libro";
    Layout = "~/Views/Shared/_Session.cshtml";
}

<h2>Publicar Libro</h2>
<p>
    LLene el formulario siguiente para publicar un nuevo Libro. 
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "No se Publico el Libro. Corrija los errores e inténtelo de nuevo.")
    <div>
        <fieldset>
            <legend>Informacion de Libro</legend>

                @Html.LabelFor(m =>m.Titulo )
                @Html.TextBoxFor(m => m.Titulo)
                @Html.ValidationMessageFor(m => m.Titulo)
               
               <label >Imagen de Portada</label>
                <input type ="file" name="file" />

                @Html.LabelFor(m => m.Autor)
                @Html.TextBoxFor(m => m.Autor)
                @Html.ValidationMessageFor(m => m.Autor)

                @Html.LabelFor(m => m.AñoPublicacion)
                @Html.TextBoxFor(m =>m.AñoPublicacion)
                @Html.ValidationMessageFor(m =>m.AñoPublicacion)

                @Html.LabelFor(m => m.Tema)
                @Html.TextBoxFor(m =>m.Tema)
                @Html.ValidationMessageFor(m =>m.Tema)

                @Html.LabelFor(m => m.Descripcion)
                @Html.TextAreaFor(m =>m.Descripcion)
                @Html.ValidationMessageFor(m =>m.Descripcion)

            <p>
                <button type="submit">Enviar</button>
            </p>
        </fieldset>
    </div>
}
