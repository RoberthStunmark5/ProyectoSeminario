@model biblioteca.Models.crear_articuloModel
@{
    ViewBag.Title = "Crear_Articulo";
    Layout ="~/Views/Shared/_Session.cshtml";
}

<h2>Crear Articulo</h2>
<p>
    LLene el formulario siguiente para publicar un nuevo Articulo. 
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "No se Publico el Articulo. Corrija los errores e inténtelo de nuevo.")
    <div>
        <fieldset>
            <legend>Informacion de Libro</legend>

                @Html.LabelFor(m => m.Titulo)
                @Html.TextBoxFor(m => m.Titulo)
                @Html.ValidationMessageFor(m => m.Titulo)

                <label >Imagen de Articulo</label>
                <input type ="file" name="file" />

                @Html.LabelFor(m => m.Contenido)
                @Html.TextAreaFor(m => m.Contenido)
                @Html.ValidationMessageFor(m => m.Contenido)
            <p>
                <button type="submit">Enviar</button>
            </p>
        </fieldset>
    </div>
}