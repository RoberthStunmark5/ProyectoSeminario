@model biblioteca.Models.crear_tutorialModel
@{
    ViewBag.Title = "Crear Tutorial";
    Layout = "~/Views/Shared/_Session.cshtml";
}

<h2>Crear Tutorial</h2>
<p>
    LLene el formulario siguiente para publicar un nuevo Tutorial. 
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "No se Publico el Tutorial. Corrija los errores e inténtelo de nuevo.")
    <div>
        <fieldset>
            <legend>Informacion de Libro</legend>

                @Html.LabelFor(m => m.Titulo)
                @Html.TextBoxFor(m => m.Titulo)
                @Html.ValidationMessageFor(m => m.Titulo)
            
                @Html.LabelFor(m => m.Indice)
                @Html.TextAreaFor(m => m.Indice)
                @Html.ValidationMessageFor(m => m.Indice)
            
                <label >Imagen de Tutorial</label>
                <input type ="file" name="file" />
           
                @Html.LabelFor(m => m.Contenido)
                @Html.TextAreaFor(m =>m.Contenido)
                @Html.ValidationMessageFor(m => m.Contenido)
            
            <p>
                <button type="submit">Enviar</button>
            </p>
        </fieldset>
    </div>
}