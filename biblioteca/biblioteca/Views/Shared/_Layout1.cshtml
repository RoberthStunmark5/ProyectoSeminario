<!DOCTYPE html>

<html>
<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<title>@ViewBag.Title</title>
<meta name="keywords" content="" />
<meta name="Small Window " content="" />
    <link href="@Url.Content("~/Content/themes/smallwindow/default.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
<!-- start header -->
<div id="header">
        <div id="logo">
                    <div id="logindisplay">
                        @Html.Partial("_LogOnPartial")
                    </div>
	        <h1><a href="#">Biblioteca de Contenidos Colectivos </a></h1>
	        <p>Diseñado para Seminario de Sistemas</p>
        </div>
            <nav id="menu">
	            <ul id="main">
		            <li>@Html.ActionLink("Principal", "Index", "Home")</li>
                    <li>@Html.ActionLink("Captcha","Captcha","Home")</li>
                     @if (@User.Identity.IsAuthenticated)
                     {   <li>@Html.ActionLink("Mi Perfil", "Usuario", "Usuario")</li>
                         <li>@Html.ActionLink("Publicar Libro", "publicar_libro", "Usuario")</li>
                         <li>@Html.ActionLink("Crear Articulo", "crear_articulo", "Usuario")</li>
                         <li>@Html.ActionLink("Crear Curso", "crear_curso", "Usuario")</li>
                         <li>@Html.ActionLink("Crear Tutorial", "crear_tutorial", "Usuario")</li>
                         <li>@Html.ActionLink("Modificar Perfil", "Perfil", "Account")</li>
                         <li>@Html.ActionLink("Cambiar Contraseña", "ChangePassword", "Account")</li>
                       
                      }
	            </ul>
	            @if (@User.Identity.IsAuthenticated == false)
             {<ul id="feed">
             <li>@Html.ActionLink("Registrarse", "Register", "Account")</li>
             <li>@Html.ActionLink("Acerca de Nosotros", "About", "Home")</li>
                <li><a href="#">Noticias</a></li>
		            <li><a href="#">Comentarios </a></li>
	            </ul>}
            </nav>
</div>
<!-- end header -->

<div id="wrapper">
<!-- start page -->
<div id="page">
	<!-- start content -->
	<div id="content">
		<div>
        <img src="../../Content/themes/smallwindow/images/image05.jpg" alt="" style="box-shadow: 7px 7px 7px #000000;border-radius: 5px 5px 5px 5px; border: thin groove #333333;"/>
        </div>
	        <div class="post">
			<h1 class="title"><a href="#">Bienvenido A Nuestro Sitio</a></h1>
			<p class="byline"><small>Diseñado por:  <a href="http://www.facebook.com/RoberthStun/" title="Roberth_Stun@hotmail.com">Roberto Campos</a></small></p>
			<div class="entry">
				@RenderBody()
      		</div>
		</div>
	
        @if (IsSectionDefined("libro_top"))
        {@RenderSection("libro_top")}
        else
        { <div class="post">
            <h2 class="title"><a href="#">Libro Destacado</a></h2>
			<p class="byline"><small>Sin publicaciones <a href="#">vacio</a></small></p>
		</div>
        }
   
		@if (IsSectionDefined("articulo_top"))
  {@RenderSection("articulo_top")}
  else
  { <div class="post">
            <h2 class="title"><a href="#">Articulo Destacado</a></h2>
			<p class="byline"><small>Sin publicaciones <a href="#">vacio</a></small></p>
			 </div>
  }
        @if (IsSectionDefined("curso_top"))
        {@RenderSection("curso_top")}
        else
        { <div class="post">
			<h2 class="title"><a href="#">Cursos destacado</a></h2>
			<p class="byline"><small>Sin publicaciones<a href="#">vacio</a></small></p>
		</div>}
        
        @if (IsSectionDefined("tutorial_top"))
        {@RenderSection("tutorial_top")}
        else
        { <div class="post">
            <h2 class="title"><a href="#">Tutorial Destacado</a></h2>
			<p class="byline"><small>Sin publicaciones <a href="#">Vacio</a></small></p>
         </div>
        }
	</div>
	<!-- end content -->
	<!-- start sidebars -->
	<div id="sidebar" class="sidebar">
		<ul>
			<li>
				<h2>Articulos Recien Publicados</h2>
				@if (IsSectionDefined("articulos_recientes"))
    {
                    @RenderSection("articulos_recientes")
    }
    else
    {<ul><li>Sin Publicaciones</li></ul>}
			</li>
			<li>
				<h2>Cursos Recien Publicados</h2>
                	@if (IsSectionDefined("cursos_recientes"))
                 {
                    @RenderSection("cursos_recientes")
                 }
                 else
                 {<p>Sin Publicaciones</p>}
				
			</li>
			<li>
				<h2>Tutoriales Recien Publicados</h2>
				@if (IsSectionDefined("tutoriales_recientes"))
    {
                    @RenderSection("tutoriales_recientes")
    }
    else
    {<ul><li>Sin Publicaciones</li></ul>}
			</li>
			<li>
				<h2>Libros Recien Publicados</h2>
                @if (IsSectionDefined("libros_recientes"))
                {
                    @RenderSection("libros_recientes")
                }
                else
                {<ul><li>Sin Publicaciones</li></ul>}
				
			</li>
		</ul>
	</div>
