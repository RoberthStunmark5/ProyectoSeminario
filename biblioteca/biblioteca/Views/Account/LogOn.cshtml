@model biblioteca.Models.LogOnModel

@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_Session.cshtml";
}

<p>
    Escriba su nombre de usuario y contraseña o <span class="def">@Html.ActionLink("Regístrese", "Register")</span> si no tiene una cuenta.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "No se ha iniciado la sesión. Corrija los errores e inténtelo de nuevo.")

@using (Html.BeginForm()) {
    <div>
        <fieldset>
                @Html.LabelFor(m => m.UserName)
                 <span class="ico">
                     <img src="../../Content/imagenes/user.png" alt="Username Icon" border="0">    
                 </span>

                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)

                @Html.LabelFor(m => m.Password)
                <span class="ico">
                 <img src="../../Content/imagenes/pass.png" alt="Password Icon" border="0">    
                </span>
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
                </fieldset>
                <fieldset>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
                        <span class="password"><a href="#">Restablecer contraseña</a></span>
                    	<button type=submit>ENVIAR</button>
                </fieldset>
        
    </div>
}
